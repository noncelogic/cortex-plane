# =============================================================================
# Cortex Plane — Environment Variables
# Copy to .env and fill in required values.
# =============================================================================

# --- Database (required) -----------------------------------------------------
DATABASE_URL=postgres://cortex:cortex_dev@localhost:5432/cortex_plane
# POSTGRES_USER=cortex
# POSTGRES_PASSWORD=cortex_dev
# POSTGRES_DB=cortex_plane
# POSTGRES_PORT=5432

# --- Vector Store ------------------------------------------------------------
QDRANT_URL=http://localhost:6333
# QDRANT_HTTP_PORT=6333
# QDRANT_GRPC_PORT=6334

# --- Server ------------------------------------------------------------------
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug

# --- Worker ------------------------------------------------------------------
GRAPHILE_WORKER_CONCURRENCY=5

# --- LLM / Execution Backends -----------------------------------------------
# LLM_PROVIDER=anthropic
# LLM_API_KEY=
# LLM_MODEL=
# LLM_BASE_URL=
# LLM_MAX_CONCURRENT=5
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# CLAUDE_BINARY_PATH=claude
# BACKEND_MAX_CONCURRENT=3

# --- Dashboard ---------------------------------------------------------------
# Server-side URL for Next.js API rewrites (container-to-container in compose)
# CORTEX_API_URL=http://localhost:4000
# Client-side URL shown in the browser
# NEXT_PUBLIC_CORTEX_API_URL=http://localhost:4000
# DASHBOARD_PORT=3000
# DASHBOARD_ORIGIN=http://localhost:3100

# --- Auth / OAuth (optional — auth disabled without CREDENTIAL_MASTER_KEY) ---
# 32+ byte hex key for encrypting stored credentials
# CREDENTIAL_MASTER_KEY=
# Dashboard origin for OAuth redirect URIs
# DASHBOARD_URL=http://localhost:3100
# Session lifetime in seconds (default: 604800 = 7 days)
# SESSION_MAX_AGE_SECONDS=604800

# OAuth providers — set CLIENT_ID + CLIENT_SECRET to enable each
# OAUTH_GOOGLE_CLIENT_ID=
# OAUTH_GOOGLE_CLIENT_SECRET=
# OAUTH_GITHUB_CLIENT_ID=
# OAUTH_GITHUB_CLIENT_SECRET=
# OAUTH_GOOGLE_ANTIGRAVITY_CLIENT_ID=
# OAUTH_GOOGLE_ANTIGRAVITY_CLIENT_SECRET=
# OAUTH_OPENAI_CODEX_CLIENT_ID=
# OAUTH_OPENAI_CODEX_CLIENT_SECRET=

# --- Channel Adapters (optional) ---------------------------------------------
# TELEGRAM_BOT_TOKEN=
# DISCORD_BOT_TOKEN=

# --- Tracing (optional) ------------------------------------------------------
# OTEL_TRACING_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
# OTEL_SAMPLE_RATE=1.0
# OTEL_SERVICE_NAME=cortex-control-plane
# OTEL_EXPORTER_TYPE=otlp

# --- Image Overrides (compose) -----------------------------------------------
# CONTROL_PLANE_IMAGE=ghcr.io/noncelogic/cortex-control-plane:local
# DASHBOARD_IMAGE=ghcr.io/noncelogic/cortex-dashboard:local
# CONTROL_PLANE_PORT=4000
