{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,

    "verbatimModuleSyntax": false,
    "composite": false,
    "declaration": false,
    "declarationMap": false,

    "plugins": [{ "name": "next" }]
  }
}
