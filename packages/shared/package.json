{
  "name": "@cortex/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./backends": {
      "import": "./dist/backends/index.js",
      "types": "./dist/backends/index.d.ts"
    },
    "./buffer": {
      "import": "./dist/buffer/index.js",
      "types": "./dist/buffer/index.d.ts"
    },
    "./channels": {
      "import": "./dist/channels/index.js",
      "types": "./dist/channels/index.d.ts"
    },
    "./tracing": {
      "import": "./dist/tracing/index.js",
      "types": "./dist/tracing/index.d.ts"
    },
    "./tracing/spans": {
      "import": "./dist/tracing/spans.js",
      "types": "./dist/tracing/spans.d.ts"
    },
    "./tracing/logger": {
      "import": "./dist/tracing/logger.js",
      "types": "./dist/tracing/logger.d.ts"
    }
