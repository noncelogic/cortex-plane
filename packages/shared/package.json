    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@qdrant/js-client-rest": "^1.12.0",
    "chokidar": "^4.0.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@cortex/config": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "vitest": "^3.0.0"
  }
