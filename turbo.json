{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "lint:fix": {},
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["TELEGRAM_BOT_TOKEN", "TELEGRAM_ALLOWED_USERS"]
}
